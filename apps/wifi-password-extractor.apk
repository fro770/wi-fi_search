package com.example.wifipasswordextractor;

import android.os.Bundle;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;
import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.InputStreamReader;

public class MainActivity extends AppCompatActivity {
    
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        
        TextView resultView = findViewById(R.id.resultTextView);
        
        if (checkRootAccess()) {
            String wifiPasswords = getWifiPasswords();
            resultView.setText(wifiPasswords);
        } else {
            resultView.setText("Требуются ROOT права!\n\n" +
                             "Инструкция:\n" +
                             "1. Установите Magisk\n" +
                             "2. Предоставьте root права приложению");
        }
    }
    
    private boolean checkRootAccess() {
        Process process = null;
        try {
            process = Runtime.getRuntime().exec("su");
            DataOutputStream os = new DataOutputStream(process.getOutputStream());
            os.writeBytes("exit\n");
            os.flush();
            int exitValue = process.waitFor();
            return exitValue == 0;
        } catch (Exception e) {
            return false;
        }
    }
    
    private String getWifiPasswords() {
        StringBuilder result = new StringBuilder();
        try {
            Process process = Runtime.getRuntime().exec("su");
            DataOutputStream os = new DataOutputStream(process.getOutputStream());
            
            os.writeBytes("cat /data/misc/wifi/wpa_supplicant.conf\n");
            os.writeBytes("exit\n");
            os.flush();
            
            BufferedReader reader = new BufferedReader(
                new InputStreamReader(process.getInputStream())
            );
            
            String line;
            while ((line = reader.readLine()) != null) {
                if (line.contains("ssid=") || line.contains("psk=")) {
                    result.append(line).append("\n");
                }
            }
            
            process.waitFor();
        } catch (Exception e) {
            result.append("Ошибка: ").append(e.getMessage());
        }
        
        return result.toString();
    }
}
